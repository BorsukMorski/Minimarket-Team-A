<h1 class="welcome">Witamy w Minimarkecie</h1>
<p class="second_text">Zaloguj się, aby kontynuować</p>

<% if session[:customer_id].nil? %>
<div class="button"><%= link_to "Zaloguj się jako KLIENT", customer_login_path %></div>
<div class="button"><%= link_to "Zarejestruj się jako KLIENT", customer_signup_path %></div>
<% else %>
  <p>Siemaneczko <%= current_customer.name %></p>
  <%= link_to "logout", customer_logout_path, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<% if session[:merchant_id].nil? %>
  <div class="button"><%= link_to "Zaloguj się jako SPRZEDAWCA", merchant_login_path %></div>
  <div class="button"><%= link_to "Zarejestruj się jako SPRZEDAWCA", merchant_signup_path %></div>
<% else %>
  <p>Siemaneczko <%= current_merchant.name %></p>
  <%= link_to "logout", merchant_logout_path, method: :delete, data: { confirm: 'Czy jesteś pewien?' } %>
<% end %>
